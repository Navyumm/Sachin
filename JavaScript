//     number-=1;
// }









//*::::::::::::::::              5. Do-While Loop statement               :::::::::::::::::::::*//

//? A do-while loop is similar to a while loop, but it always executes the block of code at least once, even if the condition is initially false. 
//! Syntax
// do{
// // code
// }while(true);



let number = 1;
let sum = 0;
while(number <=10){
    sum = sum + number;
    number+=1;
}
console.log(sum);




