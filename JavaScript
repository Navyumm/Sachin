// // // myMoney++;
// console.log(myMoney++)
// // ++i       //* pre increment
// myMoney = 20;
// // // ++myMoney;
// console.log(++myMoney);

// // //? Decrement operators 
// // i--       //* Post decrement
// myMoney = 20;
// // myMoney--;
// console.log(myMoney--);

// // --i       //* Pre decrement
// // --myMoney;
// console.log(--myMoney);












